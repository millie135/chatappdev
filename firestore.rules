rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      // Any signed-in user can read all users
      allow read: if request.auth != null;

      // Users can write only their own document
      allow write: if request.auth != null && request.auth.uid == userId;
    }


    match /chats/{senderId}/{receiverId}/{messageId} {
      // Only sender or receiver can read/write the messages
      allow read, write: if request.auth != null &&
                         (request.auth.uid == senderId || request.auth.uid == receiverId);
    }
  }
}
